%h2
  Your profile
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .row
    .col-md-4
      .form-group
        = f.label :first_name
        = f.text_field :first_name, {class: 'form-control'}
    .col-md-4
      .form-group
        = f.label :last_name
        = f.text_field :last_name, {class: 'form-control'}
    .col-md-4
      .form-group
        = f.label :second_name
        = f.text_field :second_name, {class: 'form-control'}
  .row
    .col-md-4
      .form-group
        = f.label :password
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, {autocomplete: "off", class: 'form-control'}
    .col-md-4
      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, {autocomplete: "off", class: 'form-control'}
    .col-md-4
      .form-group
        = f.label :current_password
        -# %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, {autocomplete: "off", class: 'form-control'}
  .actions.btn-group
    = f.submit "Update", {class: 'btn btn-primary btn-responsive'}
    = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-responsive'

